#!/bin/sh

INSTALL_PATH="$(cd $(dirname $0)/../ ; pwd -P )"

cat > "$HOME/.nvimrc.go" <<EOF
set runtimepath^="$INSTALL_PATH"

source $INSTALL_PATH/rc/basic.nvim

try
  source $INSTALL_PATH/custom.nvim
catch
endtry
EOF

echo 'Installed w/o any issues! Start producing your Latex magic now :-)'
echo "Hint: vim -u ~/.nvimrc.go"

